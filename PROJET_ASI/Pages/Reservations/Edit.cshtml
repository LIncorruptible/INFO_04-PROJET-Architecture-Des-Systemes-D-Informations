@page
@model PROJET_ASI.Pages.Reservations.EditModel

@{
    ViewData["Title"] = "Modifier";
}

<h1>Modifier</h1>

<h4>Réservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reservation.ID" />
            <div class="form-group">
                <label asp-for="Reservation.DateDebut" class="control-label"></label>
                <input asp-for="Reservation.DateDebut" class="form-control" />
                <span asp-validation-for="Reservation.DateDebut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.DateFin" class="control-label"></label>
                <input asp-for="Reservation.DateFin" class="form-control" />
                <span asp-validation-for="Reservation.DateFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.LogementID" class="control-label"></label>
                <select asp-for="Reservation.LogementID" class="form-control" asp-items="ViewBag.LogementID"></select>
                <span asp-validation-for="Reservation.LogementID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Annuler</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
