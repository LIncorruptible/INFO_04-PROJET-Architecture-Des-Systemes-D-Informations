@page
@model PROJET_ASI.Pages.Comportes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="./Create" asp-route-id="@Model.LogementID">Associer un nouvel équipement</a>
</p>
<p>
    <a asp-page="../Logements/Details" asp-route-id="@Model.LogementID">Retour au logement</a> | 
    <a asp-page="../Logements/Index" asp-route-id="">Voir les logements</a>
</p>

<h4>Equipements dont dispose le @Html.DisplayFor(model => Model.Logement.Adresse)</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comporte[0].Equipement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comporte[0].Quantite)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Comporte) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Equipement.Nom_equipement)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantite)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
