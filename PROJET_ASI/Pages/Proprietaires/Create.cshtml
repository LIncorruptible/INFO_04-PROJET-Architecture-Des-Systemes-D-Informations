@page
@model PROJET_ASI.Pages.Proprietaires.CreateModel

@{
    ViewData["Title"] = "Ajouter";
}

<h1>Ajouter</h1>

<h4>Propriétaire</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Proprietaire.Nom" class="control-label"></label>
                <input asp-for="@Model.Proprietaire.Nom" class="form-control" />
                <span asp-validation-for="@Model.Proprietaire.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Proprietaire.Prenom" class="control-label">Prénom</label>
                <input asp-for="@Model.Proprietaire.Prenom" class="form-control" />
                <span asp-validation-for="@Model.Proprietaire.Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Annuler</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
